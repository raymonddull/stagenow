Section "Device"
    Identifier  "intelgpu0"
    Driver      "intel"
    Option      "VirtualHeads" "1"
EndSection

Section "Monitor"
    Identifier  "VIRTUAL1"
    Option      "Enable" "true"
EndSection

Section "Screen"
    Identifier "Screen0"
    Device     "intelgpu0"
    Monitor    "VIRTUAL1"
    DefaultDepth 24
    SubSection "Display"
        Modes "1920x1080"
    EndSubSection
EndSection

sudo nano /usr/share/X11/xorg.conf.d/20-intel.conf
